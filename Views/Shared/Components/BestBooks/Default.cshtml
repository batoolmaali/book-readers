@model IEnumerable<BookReaders.Models.Borrow>

 



@if (Model.Any())
{
    <section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Best Books</h2>
                    <span>Check out all of our products.</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var borrow in Model)
        {
              

                <div class="col-lg-2 col-md-4 col-6" style="width:200px; margin-right:35px">
                    <div class="item " style="width:200px;margin-right:20px">
                        <div class="thumb">
                            <div class="hover-content">

                                <ul>
                                        <li><a asp-action="BookDetails" asp-controller="Book" asp-area="" asp-route-id="@borrow.Book.Id"><i class="fa fa-eye"></i></a></li>
                                    <li>
                                            <form asp-action="AddToFav" asp-controller="Book" asp-area="" asp-route-id="@borrow.Book.Id" method="post" id="addToFavForm">
                                            <button type="submit" style="border:none" class="star-button">
                                                <i class="fa fa-star"></i>
                                            </button>
                                        </form>
                                    </li>


                                    <li><a href="single-product.html"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            <img src="@Url.Content("~/" + @borrow.Book.ImagePath)" alt="">
                        </div>
                        <div class="down-content">
                            <h4>@borrow.Book.Title</h4>
                            
                            <ul class="stars">
                                   @borrow.Book.Quantity
                                </ul>
                        </div>
                    </div>
                </div>
                }
            
        </div>
    </div>
</section> 
}
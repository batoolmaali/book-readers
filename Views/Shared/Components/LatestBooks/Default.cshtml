@model IEnumerable<BookReaders.Models.Book>



<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Our Latest Books</h2>
                    <span>Check out all of our products.</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-2 col-md-4 col-6" style="width:200px; margin-right:35px">
                    <div class="item " style="width:200px;margin-right:20px">
                                <div class="thumb">
                            <div class="hover-content">
                             
                                        <ul>
   <li><a asp-action="BookDetails" asp-controller="Book" asp-area="" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a></li>

        <li><form asp-action="AddToFav" asp-controller="Favorite" asp-area="" asp-route-id="@item.Id" method="post" id="addToFavForm">
                                        <button type="submit" style="border:none" class="star-button">
                                                <i class="fas fa-heart"></i>
                                        </button>
                                        </form>
                                    </li>
                                    @if(item.Quantity>0){
                                        <li><a asp-action="BorrowConfirmation" asp-controller="Borrow" asp-area="" asp-route-id="@item.Id">

                                                <i class="fas fa-book"></i>
                                            
                                        </a></li>

                                        
                                    }
                                   
                     
                                </ul>
                                    </div>
                            <img src="@Url.Content("~/" + item.ImagePath)" alt="" height="302">
                                </div>
                                <div class="down-content">
                                    <h4>@item.Title</h4>
                                  
                                    <ul class="stars">
                               @item.Quantity
                            </ul>
                                </div>
                            </div>
                        </div>
                  
            }
        </div>
    </div>
</section>
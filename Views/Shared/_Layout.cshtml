<style>
    a{
        color:#000
    }
    a:hover{
                color: #06453d
    }
        .borrow-link {
            position: relative;
            display: inline-block;
            margin-left: 10px; /* Adjust as needed */
        }

            .borrow-link .badge {
                position: absolute;
                top: -12px;
                right: -12px;
                background-color: red;
                color: white;
                border-radius: 50%;
                padding: 2px 5px;
            }
</style>

@model BookReaders.ViewModels.BookKidVM

<div class="page-heading-kids " id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    @*     <h2>Single Product Page</h2>
                    <span>Awesome &amp; Creative HTML CSS layout by TemplateMo</span> *@
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ***** About Area Starts ***** -->
<div class="about-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="left-image">
                    @if (Model.Image != null)
                    {
                        <img width="50%" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Book Image" />
                    }
                </div>
            </div>
            <div class="col-lg-6">
                <div class="right-content">
                    <h4>     @Html.DisplayFor(model => model.Title)</h4>
                    <span>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod kon tempor incididunt ut labore.</span>
                    <div class="quote">
                        <i class="fa fa-quote-left"></i><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiuski smod kon tempor incididunt ut labore.</p>
                    </div>
                    <p> @Html.DisplayFor(model => model.Description)</p>
                  


                    <div class="total">
                      
                        <div class="main-border-button"><a data-bs-toggle="modal" data-bs-target="#exampleModal-@Model.Id">Read Book</a></div>

                      

                        <div class="modal fade" id="exampleModal-@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">PDF Viewer</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        @if (Model.PDF != null && Model.PDF.Length > 0)
                                        {
                string pdfBase64 = Convert.ToBase64String(Model.PDF);
                 <iframe src="data:application/pdf;base64,@pdfBase64" class="w-100" height="500" style="border: none;"></iframe>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** About Area Ends ***** -->

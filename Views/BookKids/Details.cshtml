@model BookReaders.ViewModels.BookKidVM

<style>
    a, button{
        cursor:pointer
    }
    .con p{
        font-size:35px;
        color: #06453d;
        font-weight:bold
    }

    .container-fluid{
        display:flex;
        justify-content:center;
        align-items:center;
    }
    .con {
        display:flex;
        justify-content:space-around;
        align-items:center;
    }

        .con div{
            width:50%;
            height:100%
        }
        .con img{
        width:40%;
        overflow:hidden
    }
</style>
<div class="container-fluid" style="background-color:#f5f1ed ; height: 200px; background-size: cover;margin-top:80px">

    <div class="container con">
        <div>
    <img src="https://images-production.bookshop.org/spree/taxons/banner_images/10856/original/flamenco-logged-out-1.png?1579976083" />
        </div>
        <div>
    <p>About Book</p>
    </div>
    </div>
 </div>


<!-- ***** About Area Ends ***** -->
<section class="section" id="productt">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 ">
                <div class="left-images d-flex justify-content-end">
                    @if (Model.Image != null)
                    {
                        <img width="40%" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Book Image" style="margin-left: auto;" />
                    }
                
                </div>
            </div>
            <div class="col-lg-8 pl-5">
                <div class="right-content">
                    <h4> @Html.DisplayFor(model => model.Title)</h4>
                    <span class="price">Language: English</span>
                    <ul class="stars">Kids</ul>
                    <span>@Html.DisplayFor(model => model.Description)</span>
                 @*    <div class="quote">
                        <i class="fa fa-quote-left"></i>
                        <h3>By: @Html.DisplayFor(item => item.Book.Author.Name)</h3>
                    </div> *@
                    <div class="quantity-content" style="height:150px">
                        <div class="total">
                            <h4 class="d-flex justify-content-between " style="width:35%">

                                <div class="main-border-button"><a data-bs-toggle="modal" data-bs-target="#exampleModal-@Model.Id">Read Book</a></div>



                                <div class="modal fade" id="exampleModal-@Model.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-scrollable">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">PDF Viewer</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                @if (Model.PDF != null && Model.PDF.Length > 0)
                                                {
                                                    string pdfBase64 = Convert.ToBase64String(Model.PDF);
                                                    <iframe src="data:application/pdf;base64,@pdfBase64" class="w-100" height="500" style="border: none;"></iframe>
                                                }
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                               

                            </h4>
                        
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
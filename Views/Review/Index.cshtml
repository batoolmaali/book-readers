@model IEnumerable<BookReaders.Models.Review>



<style>
    .con p {
        font-size: 30px;
        color: #06453d;
        font-weight: bold;
        font-style: italic
    }

    .con {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

        .con div {
            width: 50%;
            height: 100%;
        }

        .con img {
            width: 80%;
            height: auto;
            max-width: 100%;
            overflow: hidden;
        }

    .left-images img {
        width: 70% !important;
    }

    a {
        cursor: pointer
    }
</style>

<div class="container-fluid" style="background-color: #f5f1ed; margin-top: 80px;">
    <div class="container con">
        <div>
            <img src="https://bridge315.qodeinteractive.com/wp-content/uploads/2020/01/p1-img-02.jpg" />
        </div>
        <div>
            <p>Books Reviews</p>
        </div>
    </div>
</div>


    <ul>
    @foreach (var item in Model)
        {
            <section class="section" id="productt">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="left-images  d-flex justify-content-end">
                                <img width="30%" src="@Url.Content("~/" + item.Book.ImagePath)" style="margin-left: auto;" />

                            </div>
                        </div>
                        <div class="col-lg-8 pl-5">
                            <div class="right-content">
                                <h4>@item.Book.Title</h4>
                                <span class="price">Languages: @item.Book.Language</span>
                               
                               
                            <div class="quote">
                                <i class="fa fa-quote-left"></i>
                                <h5>@item.Comment</h5>
                            </div>
                            <div class="d-flex flex-row profile  w-60 mt-5">
                                <div>
                                    <img src="@Url.Content("~/" + item.User.ImagePath)" alt="" class="rounded-circle" style="    width: 45px !important;
    height: 45px;
    border-radius: 50%;
    object-fit: cover;" />
                                </div>
                                <div class="d-flex flex-row pl-2 align-content-center mt-2">

                                    <div class="name me-1"> By @item.User.UserName | </div> <span class="text-muted designation mt-0">  @item.ReviewDate.ToString("MMMM") @item.ReviewDate.ToString("dd, yyyy") </span>
                                </div>
                            </div>
                              
                            </div>
                        </div>
                    </div>
                    <hr />
                </div>
            </section>

        }
    </ul>
}

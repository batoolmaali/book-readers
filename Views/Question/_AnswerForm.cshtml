@model BookReaders.Models.Answer


<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" asp-controller="Answer" asp-area="" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestionId" />
            <div class="form-group">
           
                <div class="form-floating">
                    <textarea asp-for="Content" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 150px"></textarea>
                    <label asp-for="Content">Comments</label>
                <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>
           
          
       
            <div class="form-group">
                <button class="btn btn-sm btn-dark pull-left" type="submit">
               
                   Comment
                </button>
            </div>
        </form>
    </div>
</div>


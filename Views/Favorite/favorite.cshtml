@model UserFavViewModel

<style>
    .con p {
        font-size: 30px;
        color: #06453d;
        font-weight: bold;
        font-style: italic
    }

    .con {
        display: flex;
        justify-content: space-around;
        align-items: center;
    }

        .con div {
            width: 50%;
            height: 100%;
        }

        .con img {
            width: 80%;
            height: auto;
            max-width: 100%;
            overflow: hidden;
        }
        .left-images img{
            width:70% !important;
        }
        a{
            cursor:pointer
        }

    .main-border-button form{
        font-size: 13px;
        border-color: #2a2a2a;
        color: #2a2a2a;
        padding: 11px 25px;
        display: inline-block;
        font-weight: 500;
        transition: all .3s;
        
    }
    .main-border-button input{
        background-color: transparent;
        border:none
    }
    
</style>  

<div class="container-fluid" style="background-color: #f5f1ed; margin-top: 80px;">
    <div class="container con">
        <div>
            <img src="https://bridge315.qodeinteractive.com/wp-content/uploads/2020/01/p1-img-02.jpg" />
        </div>
        <div>
            <p>Favorite List</p>
        </div>
    </div>
</div>

@model IEnumerable<BookAPI.ViewModels.KidsCategoryViewModel>




<section class="our-team" style="border:none">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Best Children's and Young Adult Books</h2>
                    <span>Details to details is what makes Hexashop different from the other themes.</span>
                </div>
            </div>
            @foreach (var item in Model) {
            <div class="col-lg-3">
                
                            <a asp-action="allBook" asp-controller="KidsCategories" asp-route-id="@item.Id" asp-area="">
                <div class="team-item">
                    <div class="thumb">
                       
                        @if (item.Image != null && item.Image.Length > 0)
                        {
                            string imageBase64 = Convert.ToBase64String(item.Image);
                            <img src="data:image;base64,@imageBase64" alt="Image" />
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                    </div>
                    <div class="down-content">
                        <h4> @Html.DisplayFor(modelItem => item.Name)</h4>
                      
                            <a asp-action="allBook" asp-controller="KidsCategories" asp-route-id="@item.Id" asp-area="">
                                <span>All Books</span>
                            </a>
                    </div>

                </div>
                </a>
            </div>
          }
        </div>
    </div>
</section>
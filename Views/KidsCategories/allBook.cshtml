<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Coming Soon</h2>
                    <span>Check out all of our products.</span>
                </div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-6">
                Showing all results
            </div>
           
        </div>
    </div>
   
    @if (Model != null && Model.Any())
    {
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="col-lg-2 col-md-4 col-6 book-item" style="width:200px; margin-right:35px; margin-bottom:30px">
                    <div class="item" style="width:200px; margin-right:20px">
                        <div class="thumb">
                            <div class="hover-content">
                                <ul>
                                    <li><a asp-action="BookDetails" asp-controller="Book" asp-area="" asp-route-id="@item.Id"><i class="fa fa-eye"></i></a></li>
                                    <li>
                                        <form asp-action="AddToFav" asp-controller="Book" asp-area="" asp-route-id="@item.Id" method="post" id="addToFavForm">
                                            <button type="submit" style="border:none" class="star-button">
                                                <i class="fa fa-star"></i>
                                            </button>
                                        </form>
                                    </li>
                                    <li><a href="single-product.html"><i class="fa fa-shopping-cart"></i></a></li>
                                </ul>
                            </div>
                            @if (item.Image != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" alt="Book Image" />
                            }
                        </div>
                        <div class="down-content">
                            <h5>@item.Title</h5>
                            <span style="margin-bottom:10px">
                                    <p> @(item.Description.Length > 20 ? item.Description.Substring(0, 40) + "..." : item.Description)</p>
                            </span>
                                <a asp-action="Details" asp-controller="BookKids" asp-area="" asp-route-id="@item.Id" class="btn btn-dark" style="width:100%; background-color: #573ba3; border-radius: 9999px;">
                                    <i class="fas fa-book"></i>
                                    Read Now
                                </a>
                        </div>
                    </div>
                </div>
            }
        </div>
         
    </div>
    }
    else
    {
        <p>No books found for this category.</p>
    }
</section>


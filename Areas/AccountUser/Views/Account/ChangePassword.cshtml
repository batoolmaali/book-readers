@model BookReaders.Areas.AccountUser.Models.ChangePassword



@{
    ViewData["Title"] = "Login";
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <link href="~/css/Registerformstyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container1">
        <div class="image-bg"></div>
        <div class="content">
            <div className="head">
                <div style="width:100%; text-align:center; margin-top:10%">
                    <h1>Change Password</h1>
                </div>

                @*    <a className="back" > <HiOutlineArrowNarrowLeft size={22} />Back
                </a> *@

            </div>
            <div class="body">

                <div class="main" style="margin-top:20%">
                    <form asp-action="ChangePassword" asp-area="AccountUser" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-content" style="margin-top: 15px;">
                            <div class="form-group">
                                <label asp-for="CurrentPassword" class="control-label"></label>
                                <input asp-for="CurrentPassword" class="form-control" />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                           
                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label"></label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="footer">
                                <button type="submit" class="btn btn-dark w-100">Change</button>
                            </div>


                        </div>


                    </form>


                </div>
            </div>
        </div>
</body>
</html>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



@model BookReaders.ViewModels.FormKidsCategoryVM






<div class="row container d-flex justify-content-center">
    <div class="card p-4 ">
        <form asp-action="Create" asp-controller="KidsCategory1" asp-area="Dashboard" method="post" enctype="multipart/form-data">
            <h5>Add kids Categories </h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group pb-3">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

           



            <div class="form-group ">
                <input type="submit" value="Save" class="btn text-light" style="background-color:#06453d" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
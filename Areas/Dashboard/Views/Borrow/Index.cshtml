                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </form>

                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                    else
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Book.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BorrowDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReturnDate)
                                            </td>
                                            <td>
                                                @if (item.IsReturned == false)
                                                {
                                                    <span class="text-danger">No</span>
                                                }
                                                else
                                                {
                                                    <span> Yes</span>
                                                }

                                            </td>
                                            @if (item.IsReturned == false)
                                            {

                                                @*  @(DateTime.Now.Day- item.ReturnDate.Day ) *@
                                                @if ((DateTime.Now - item.BorrowDate).TotalDays >= 7)
                                                {
                                                    <td>
                                                        <p>Delay @(item.ReturnDate.Day - DateTime.Now.Day) day</p>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <p>@((item.ReturnDate.Day - DateTime.Now.Day)) Day Left</p>
                                                    </td>
                                                }
                                             


                                            }
                                            else
                                            {
                                                <td>0</td>
                                            }

                                            @if (item.IsReturned == true)
                                            {
                                                <td>

                                                    <a class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.Id">

                                                        <i class="fas fa-trash-alt delete-icon"></i>
                                                    </a>
                                                    @*   modal *@
                                                    <div class="modal" id="exampleModal-@item.Id">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Modal title</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true"></span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you Sure Delete Item @item.Book.Title ?</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                                                        @Html.AntiForgeryToken()
                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </form>

                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }

                            }

                            
                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


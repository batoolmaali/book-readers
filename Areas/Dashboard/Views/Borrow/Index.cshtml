@model IEnumerable<BookReaders.Models.Borrow>

<div class="row container d-flex justify-content-center">

    <div class="container ">
        <partial name="_Notification" />
        <div class="row mb-4">
            <div class="col-md-6">

                <a asp-action="Create" asp-controller="Category" class="btn text-light" style="background-color:#573ba3">Create New</a>
            </div>


            <div class="col-md-6">
                <form asp-action="Search" asp-controller="Category" asp-area="Dashboard" method="get" class="form-inline d-flex">

                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="SearchItem">
                    <input class="btn text-light" style="background-color:#573ba3" type="submit" value="Search" />
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card ">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Borrow Books</h5>
                <hr />
                <p class="card-description">

                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.User)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Book)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BorrowDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReturnDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsReturned)
                                </th>
                                <th>total days</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                @if (item.IsReturned == true)
                                {
                                    <tr class="alert alert-success">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.User.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Book.Title)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BorrowDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ReturnDate)
                                        </td>
                                        <td>
                                            @if (item.IsReturned == false)
                                            {
                                                <span class="text-danger">No</span>
                                            }
                                            else
                                            {
                                                <span class="text-success"> Yes</span>
                                            }

                                        </td>
                                        @if (item.IsReturned == false)
                                        {
                                            <td>
                                         
                                              @*   @if ((DateTime.Now.Day - item.ReturnDate.Day) > 0)
                                                {
                                                    <p>Delay @(DateTime.Now.Day - item.ReturnDate.Day)</p>
                                                }
                                                else
                                                {
                                                    <p>@((item.ReturnDate.Day - DateTime.Now.Day)) Day Left</p>
                                                } *@
                                                @if ((DateTime.Now - item.BorrowDate).TotalDays >= 7)
                                                {
                                                    <p>Delay @(item.ReturnDate.Day - DateTime.Now.Day) day</p>
                                                }
                                                else
                                                {
                                                    <p>@((item.ReturnDate.Day - DateTime.Now.Day)) Day Left</p>
                                                }
                                            
                                             
                                            </td>
                                        }
                                        else
                                        {
                                            <td>0</td>
                                        }
                                        @if (item.IsReturned == true)
                                        {
                                            <td>
                                                @if (item.IsReturned == true)
                                                {
                                                <td>

                                                    <a class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.Id">

                                                        <i class="fas fa-trash-alt delete-icon"></i>
                                                    </a>
                                                        @*   modal *@
                                                    <div class="modal" id="exampleModal-@item.Id">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Modal title</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true"></span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you Sure Delete Item @item.Book.Title ?</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <form asp-action="Delete" asp-area="Dashboard" asp-route-id="@item.Id" asp-controller="Borrow" method="post">
                                                                            @Html.AntiForgeryToken()
                                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                                    </form>

                                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                }
                                            </td>
                                        }
                                      
                                    </tr>
                                }
                                else
                                {
                                    @if ((DateTime.Now - item.BorrowDate).TotalDays >= 7)
                                    {
                                        <tr class="alert alert-danger">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.UserName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Book.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.BorrowDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ReturnDate)
                                            </td>
                                            <td>
                                                @if (item.IsReturned == false)
                                                {
                                                    <span class="text-danger">No</span>
                                                }
                                                else
                                                {
                                                    <span> Yes</span>
                                                }

                                            </td>
                                            @if (item.IsReturned == false)
                                            {

                                                @*  @(DateTime.Now.Day- item.ReturnDate.Day ) *@
                                                @if ((DateTime.Now - item.BorrowDate).TotalDays >= 7)
                                                {
                                                    <td>
                                                        <p>Delay @(item.ReturnDate.Day - DateTime.Now.Day) day</p>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <p>@((item.ReturnDate.Day - DateTime.Now.Day)) Day Left</p>
                                                    </td>
                                                }


                                            }
                                            else
                                            {
                                                <td>0</td>
                                            }
                                          

                                            @if (item.IsReturned == true)
                                            {
                                                <td>

                                                    <a class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal-@item.Id">

                                                        <i class="fas fa-trash-alt delete-icon"></i>
                                                    </a>
                                                    @*   modal *@
                                                    <div class="modal" id="exampleModal-@item.Id">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Modal title</h5>
                                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                                                        <span aria-hidden="true"></span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                    <p>Are you Sure Delete Item @item.Book.Title ?</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">

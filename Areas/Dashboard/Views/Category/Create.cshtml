@model BookReaders.Models.Category

@{
    ViewData["Title"] = "Create";
}

<div class="row container d-flex justify-content-center">
    <div class="card p-4 ">
        <form asp-controller="Category" asp-area="Dashboard" asp-action="Create" method="post" enctype="multipart/form-data">
            <h5>Add Category</h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn text-light" style="background-color:#573ba3" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

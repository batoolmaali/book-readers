@model BookReaders.Models.Book

@{
    ViewBag.Action = Model != null ? "EditBook" : "Create";
    ViewData["Title"] = ViewBag.Action;
}



<div class="row container d-flex justify-content-center">
<div class="card p-4 ">
        <form asp-controller="Book" asp-area="Dashboard" asp-action="Create" method="post" enctype="multipart/form-data">
        <h5>Add Books</h5>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group pb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" type="Text" class="form-control" placeholder="">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

            <div class="form-group pb-3">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
            <div class="form-group pb-3">
            <label asp-for="Language" class="control-label"></label>
            <input asp-for="Language" class="form-control" />
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>
            <div class="form-group pb-3">
            <label asp-for="PublishDate" class="control-label"></label>
            <input asp-for="PublishDate" class="form-control" />
            <span asp-validation-for="PublishDate" class="text-danger"></span>
        </div>
        <div class="form-group pb-3">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Cat ,"Id", "Name"))">
                <option>--Select Category --</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group pb-3">
            <label asp-for="AuthorId"></label>
            <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag. Authors ,"Id", "Name"))">
                <option>--Select Category --</option>
            </select>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>
            <div class="form-group form-check pb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group form-check pb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsComingSoon" />
                    <span>@Html.DisplayNameFor(model => model.IsComingSoon)</span>
                </label>
            </div>
        <div class="form-group pb-3">
            <label asp-for="ImagePath"></label>
            <input asp-for="ImagePath" type="file" name="Image" class="form-control" placeholder="">
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

            <div class="form-group pb-3">
                <label asp-for="BookPDF"></label>
                <input asp-for="BookPDF" type="file" name="FilePDF" class="form-control" placeholder="">
                <span asp-validation-for="BookPDF" class="text-danger"></span>
            </div>

        <div class="form-group pb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group ">
                <input type="submit" value="Save" class="btn text-light" style="background-color:#06453d" />
        </div>
    </form>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
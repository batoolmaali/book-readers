@using BookReaders.ViewModels
@model BookReaders.ViewModels.FormRecommendedBook






<div class="row container d-flex justify-content-center">
    <div class="card p-4 ">
        <form asp-action="Create" asp-controller="RecommendedBook" asp-area="Dashboard" method="post" enctype="multipart/form-data">
            <h5>Add kids Categories </h5>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group pb-3">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


            <div class="form-group pb-3">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" type="file" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

          
            <div class="form-group pb-3">
                <label asp-for="AssociatedSeason" class="control-label"></label>
                <select asp-for="AssociatedSeason" asp-items="Html.GetEnumSelectList<Season1>()" class="form-control">
                    <option value="">Select a season</option>
                </select>
                <span asp-validation-for="AssociatedSeason" class="text-danger"></span>
            </div>
            <div class="form-group pb-3">
                <label asp-for="AssociatedMood" class="control-label"></label>
                <select asp-for="AssociatedMood" asp-items="Html.GetEnumSelectList<Mood1>()" class="form-control">
                    <option value="">Select a Mode</option>
                </select>
                <span asp-validation-for="AssociatedMood" class="text-danger"></span>
            </div>


            <div class="form-group ">
                <input type="submit" value="Save" class="btn text-light" style="background-color:#06453d" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}